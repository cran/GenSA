citHeader("To cite GenSA in publications use:")

citEntry(entry = "Article",
  title        = "Generalized Simulated Annealing for Efficient Global Optimization: the {GenSA} Package for {R}.",
  author       = personList(person("Yang Xiang"),
                   as.person("Sylvain Gubian"),
                   as.person("Brian Suomela"),
                   as.person("Julia Hoeng")),
  journal      = "Journal of Statistical Software",
  year         = "2011",
  note         = "Forthcoming",
  url          = "http://www.jstatsoft.org/",
  textVersion  =
  paste("Y. Xiang, S. Gubian. B. Suomela, J. Hoeng (2011).",
        "Generalized Simulated Annealing for Efficient Global Optimization: the GenSA Package for R.",
        "Journal of Statistical Software, Forthcoming.",
        "URL http://www.jstatsoft.org/.")
)